{
  "functions": {
    "api/send-email.js": {
      "maxDuration": 30,
      "memory": 1024,
      "regions": ["iad1", "sfo1", "lhr1", "hnd1"]
    },
    "api/get-config.js": {
      "maxDuration": 10,
      "memory": 512,
      "regions": ["iad1", "sfo1", "lhr1", "hnd1"]
    },
    "api/health.js": {
      "maxDuration": 5,
      "memory": 256,
      "regions": ["iad1", "sfo1", "lhr1", "hnd1"]
    }
  },
  "headers": [
    {
      "source": "/api/(.*)",
      "headers": [
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-XSS-Protection",
          "value": "1; mode=block"
        },
        {
          "key": "Referrer-Policy",
          "value": "strict-origin-when-cross-origin"
        }
      ]
    }
  ],
  "rewrites": [
    {
      "source": "/health",
      "destination": "/api/health"
    }
  ]
}